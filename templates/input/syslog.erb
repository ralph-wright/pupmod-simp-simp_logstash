input {
<% if @listen_plain_tcp -%>
  tcp {
<% unless @add_field.nil? -%>
    add_field => {
    <%=
      @add_field.keys.map do |k|
        k = %("#{k}" => "#{@add_field[k]}")
      end.join("\n      ")
    %>
    }
<% end -%>
<% unless @codec.nil? -%>
    codec => "<%= @codec %>"
<% end -%>
    host => "<%= @host %>"
    port => <%= @daemon_port %>
<% unless @lstash_type.nil? -%>
    type => "<%= @lstash_type %>"
<% end -%>
<% unless @lstash_tags.nil? -%>
    tags => [ "<%= @lstash_tags.join('", "') %>" ]
<% end -%>
  }
<% end -%>

<% if @listen_plain_udp -%>
  udp {
<% unless @add_field.nil? -%>
    add_field => {
    <%=
      @add_field.keys.map do |k|
        k = %("#{k}" => "#{@add_field[k]}")
      end.join("\n      ")
    %>
    }
<% end -%>
<% unless @codec.nil? -%>
    codec => "<%= @codec %>"
<% end -%>
    host => "<%= @host %>"
    port => <%= @daemon_port %>
<% unless @lstash_type.nil? -%>
    type => "<%= @lstash_type %>"
<% end -%>
<% unless @lstash_tags.nil? -%>
    tags => [ "<%= @lstash_tags.join('", "') %>" ]
<% end -%>
  }
<% end -%>
}
